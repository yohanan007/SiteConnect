{%extends 'base.html.twig' %}
{%block title %} Page gestionnaire du blog  {%endblock%}
{% block body %}
<header>
    
</header>
     <nav class="navbar navbar-inverse"> 
     <div class="container-fluid">
             <div class="navbar-header">
                 <a class="navbar-brand" href="#">
                     FAMILLE HIRSCH GESTIONNAIRE
                 </a>
             </div>
             <ul class="nav navbar-nav">
                 <li class="active">
                     <a href="../">
                         index
                     </a>
                 </li>
                <li><a href="#">
                     autre
                 </a>
                 </li> 
             </ul>
      </div>
     </nav>
     <section class="container-fluid">
         <article>
         <div class="jumbotron">
             
         <h3>GESTION DE VOTRE BLOG <span class="glyphicon glyphicon-inbox"></span></h3>
         <p>Page de gestion de votre blog, ajouter, supprimer, modifier les pages de votre blog </p>
         
         </div>
         </article>
         <article class="row">
             <div class="col-md-6">
            <div class="well">
                <h4>création d'une nouvelle page</h4>
                <p>accés à la création d'une page pour le blog personnel</p>
                <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">créer</button>
            </div>
            </div>
            <div class="col-md-6">
            <div class="well">
                <h4>Gestion d'une nouvelle page</h4>
                <p>accés à la gestion d'une page pour le blog personnel</p>
                <button class="btn btn-primary btn-lg">gestion</button>
            </div>
            </div>
         </article>
         <article>
             <div class="well">
                 <center><h4>PAGE DEJA CREEE</h4></center>
             </div>
         </article>
         <!-- fenêtre modal bouton creer -->
         <article class="modal fade" id="myModal" role="dialog">
             <div class="modal-dialog">
                 <div class="modal-content">
                 <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal">&times;</button>
                 </div>
                 <div class="modal-body">
                     {{ form(forms) }}
                 </div>
                 </div>
             </div>
         </article>
     </section>
         {%endblock%}